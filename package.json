  "private": true,
  "scripts": {
    "====== BUILD ======": "",
    "build:dev": "cross-env NODE_ENV=development webpack --mode development --config webpack.config.js",
    "build:prod": "cross-env NODE_ENV=production webpack --mode production --config webpack.config.js",
    "====== WATCH ======": "",
    "watch": "cross-env NODE_ENV=development webpack --mode development --config webpack.config.js --watch",
    "====== START ======": "",
    "start:server": "nodemon dist/server.js",
    "start:dev:server": "concurrently \"yarn watch\" \"yarn start:server\"",
    "start:prod:server": "concurrently \"yarn build:prod\" \"yarn start:server\""
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@babel/runtime": "^7.12.5",
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.10.1",
    "babel-loader": "^8.2.1",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^6.1.1",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6",
    "terser-webpack-plugin": "^5.0.3",
    "typescript": "^4.1.2",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.15"
  }
}
